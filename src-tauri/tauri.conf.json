{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Kavka Messenger",
  "identifier": "com.kavka-messenger.dev",
  "build": {
    "frontendDist": "../dist/browser",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "Kavka Messenger",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
